<UserControl x:Class="Persik_Chat.Input_Selection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Persik_Chat"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400"
             Background="White"
             >
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Вітаємо у Persik_Chat!" 
                       FontSize="18" FontWeight="Bold" 
                       TextAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Ти у нас вперше? Швиденько реєструйся:" 
                       FontSize="14" TextAlignment="Center" Margin="0,0,0,10"/>
            <Button Content="Зареєструватися" 
                    Background="Black" Foreground="Orange" 
                    FontSize="14" Padding="10" 
                    Width="250"/>

            <TextBlock Text="Ти повернувся? Ми заждались! Заходь:" 
                       FontSize="14" TextAlignment="Center" Margin="20,20,0,10"/>
            <Button Content="Увійти" 
                    Background="Black" Foreground="Orange" 
                    FontSize="14" Padding="10" 
                    Width="250"/>
        </StackPanel>
    </Grid>
</UserControl>
