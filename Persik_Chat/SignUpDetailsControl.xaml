<UserControl x:Class="Persik_Chat.SignUpDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Persik_Chat"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400" Background="White"
             >

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Вітаємо у Persik_Chat!" 
                       FontSize="18" FontWeight="Bold" 
                       TextAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Ну ж бо! Ти майже у цілі" 
                       FontSize="14" TextAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Введіть ваше ім'я:" FontSize="14"/>
            <TextBox Height="30" BorderThickness="2" BorderBrush="Black"/>

            <TextBlock Text="Введіть ваше прізвище (необов'язково):" FontSize="14" Margin="0,10,0,0"/>
            <TextBox Height="30" BorderThickness="2" BorderBrush="Black"/>

            <TextBlock Text="Вкажіть вашу дату народження:" FontSize="14" Margin="0,10,0,0"/>
            <DatePicker Height="30" BorderThickness="2" BorderBrush="Black" Language="uk-UA"/>

            <TextBlock Text="Введіть дійсну дату народження!" FontSize="12" Foreground="Red" Margin="0,5,0,20"/>

            <Button Content="Продовжити" 
                    Background="Black" Foreground="White" 
                    FontSize="14" Padding="10" Width="250"/>
        </StackPanel>
    </Grid>
</UserControl>
