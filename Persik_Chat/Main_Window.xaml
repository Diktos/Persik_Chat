<Window x:Class="Persik_Chat.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Persik_Chat"
        mc:Ignorable="d"
        Title="Persik_Chat" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <local:Introduction_Window Visibility="Visible" />
        <local:Input_Selection Visibility="Collapsed" />
        <local:AuthSignUpControl Visibility="Collapsed" />
        <local:SignUpDetailsControl Visibility="Visible" />
        <local:AuthLoginControl Visibility="Visible" />
    </Grid>
</Window>
