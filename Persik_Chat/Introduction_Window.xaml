<UserControl x:Class="Persik_Chat.Introduction_Window"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Persik_Chat"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Width="400" Height="40" Margin="0,10,0,10" Background="Black" Foreground="Green" FontSize="20" >
                Натисніть, щоб обрати
            </Button>
            <Button Width="400" Height="40" Background="Black" Foreground="Orange" FontSize="20">
                Продовжити українською
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
